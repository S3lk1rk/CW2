node {
    def jenkdhub

    stage('Clone repository') {
      

        checkout scm
    }

    stage('Build image') {
  
        jenkdhub.inside {
            sh 'echo "Image has been built successfully, use docker ps to see the created image"'
                        }
       jenkdhub = docker.build("mselkirk/devopscoursework")
    }

    stage('Test image') {
  
        jenkdhub.run()
        jenkdhub.inside {
            sh 'echo "Image has been built successfully, use docker ps to see the created image"'
                        }
                        }

    stage('Push image')  {
        
        docker.withRegistry('https://registry.hub.docker.com', 'git') {
            jenkdhub.push("${env.BUILD_NUMBER}")
            jenkdhub.push("latest")
                                                                      }
                         } 
    stage('Cleanup docker images to prevent server capacity overload')
        {
         echo 'filler'
        } 
       	
    stage('Deploying App to kubernetes') {
      
        script {
          kubernetesDeploy(configs: "ansible/deploycreatescale.yml" , kubeconfigId: "kubernetes")
	    }
                   
                                         }
}
